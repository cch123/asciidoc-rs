    ~ sidebar_block_content*
    ~ (sidebar_block_delimiter | EOF)
}

sidebar_block_content = { blank_line | file_inclusion | list_item | non_sidebar_block | sidebar_block_paragraph }

non_sidebar_block = { !sidebar_block ~ delimited_block }

