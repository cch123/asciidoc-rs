passthrough_macro = {
    "pass:[" ~ passthrough_macro_character* ~ "]"
    | "pass:q[" ~ (quoted_text | passthrough_macro_character*) ~ "]"
}

passthrough_macro_character = { alphanums | spaces | (!"]" ~ CHAR) }

// ------------------------------------------
// Cross References
// ------------------------------------------
cross_reference = {
