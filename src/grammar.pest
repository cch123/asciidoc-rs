// ------------------------------------------
// blank_line
// ------------------------------------------
blank_line = { !EOF ~ EOLS }

// ------------------------------------------
// Base Types
// ------------------------------------------

//alphanum = { [\pL0-9] }

parenthesis = { "(" | ")" | "[" | "]" }

//alphanums = { [\pL0-9]+ }

dot = { "." }

simple_word = { alphanums ~ &(WS | EOL) }

// a word may end with a dot, but cannot have dots within
other_word = {
    alphanums
    | quoted_text_prefix
    | parenthesis
    | ((!(NEWLINE |WS |dot |quoted_text_prefix) ~ CHAR) ~ dot?)+
    | "."+
}

spaces = { WS+ }

file_location = {
    (FILENAME | document_attribute_substitution)+
}

location = {
    URL_SCHEME ~ (FILENAME | document_attribute_substitution | !(EOL |"[") ~ CHAR)+
}

FILENAME = { (alphanums | "." | "_" | "/" | "-" )+ }

URL = {(alphanums | (!(NEWLINE |WS |"[" |"]") ~ CHAR))+ }

URL_SCHEME = { "http://" | "https://" | "ftp://" | "irc://" | "mailto:" }

ID = { alphanums | (!(NEWLINE |WS |"[" |"]" |"<<" |">>" |",") ~ CHAR)+ }

// digit 在 pest 中已经有了
// 需要替换
DIGIT = { ASCII_DIGIT }

// number 在 pest 中可能已经有了
// 需要确认
NUMBER = { "-"? ~ DIGIT+ }

WS = _{ " " | "\t" }

// newline 在 pest 中可能也有了，需确认
NEWLINE = { "\r\n" | "\r" | "\n" }

EOF = { !CHAR }

EOL = { NEWLINE | EOF }

EOLS = { WS* ~ EOL }

CHAR = {
    !("\"" | "\\") ~ ANY
    | "\\" ~ ("\"" | "\\" | "/" | "b" | "f" | "n" | "r" | "t")
    | "\\" ~ ("u" ~ ASCII_HEX_DIGIT{4})
}