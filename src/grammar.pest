    return types.NewStringElement(string(c.text))
}) / ((!WS !NEWLINE !single_plus_passthroughPrefix .)  { // a single character
    return types.NewStringElement(string(c.text))
})
*/

triple_plus_passthrough_prefix = { "+++" }

